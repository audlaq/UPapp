<%= form_for @written_statement, url: new_politician_written_statement_path do |f| %>
  
  <%if user_signed_in? %>
  <%= yield %>
  <p>Logged in as <%= current_user.email %></p>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
  <% else %>
  <%= link_to "Sign up", new_user_registration_path %> | <%= link_to "Login", new_user_session_path %>
  <% end %>


  <% if @written_statement.errors.any? %>
      <h2><%= pluralize(@written_statement.errors.count, "error") %> prohibited this written_statement from being saved:</h2>

      <ul>
      <% @written_statement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  <% end %>

  <div class="field">
    <%= f.label :statement %><br>
    <%= f.text_field :statements %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :source %><br>
    <%= f.text_field :path %>
  </div>
  <br>
  <div class="field">
    <%= f.label :date %>
    <%= 'YYYY-MM-DD' %><br>
    <%= f.text_field :date %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
